  margin: 0 5rpx 5rpx 0;
  padding: 0 10px;
}

.log {
  width: 100%;
  height: 180rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  /* box-shadow: 0px 2px 5px #dfdede; */
