<!--pages/user/user.wxml-->

<view class='usercenter'>
  <image class='bg' src='/images/bg.png'></image>

  <view class='head'>
    <image class='headphoto' src='{{userInfo.avatarUrl}}'></image>
  </view>
</view>

<!--基本信息盒模型  -->
<view class='basic'>
  <text class='basictext'>基本信息</text>
  <!--名字部分  -->
  <view class='namebox'>
    <text class='name'>姓名</text>
    <input class='nametext' value="{{newName}}" bindinput="inputName" bindconfirm="editName"></input>
  </view>

  <!--手机号部分  -->
  <view class='namebox'>
    <text class='name'>手机号</text>
    <input placeholder-class='textcolor' class='nametext' type='number'></input>
  </view>
</view>


<navigator class='back' open-type="navigateBack">返回</navigator>