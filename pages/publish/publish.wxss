/* pages/publish/publish.wxss */
.container {
  height: 100%;
  min-height: 100%;
  /* display: flex; */
  flex-direction: column;
  box-sizing: border-box;
  padding: 0px; 
}

.title {
  width: 100%;
  height: 50px;
  background: white;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-between;
  /* border-bottom: 5px; */
  /* border-bottom-color: #e1e1e1; */
  /* border-width: 2px; */
  /* padding-bottom: 50px; */
  border-bottom: 2px solid #e1e1e1;

}

.titleSel {
  color: #5f6fee;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width: 50%;
}

.titleUnsel {
  color: #858fab;
  font-size: #858fab;
}

.headerLineSel {
  background: #5f6fee;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}

.headerLineUnsel {
  background: #fff;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}

.swiper {
  width: 100%;
  flex: 1;
  height:100vh;
  overflow: scroll;
}

.recordItem {
  margin-top: 10rpx;
  background-color: white;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}


/* pages/pagepublication/pagepublication.wxss */

/*导航 问题：居中问题 */

.navigation {
  padding-top: 8px;
  text-align: center;
  height: 44px;
  padding-right: 5px;
  border-bottom: 2rpx solid #e1e1e1;
  /* padding-bottom: 35px; */
}

/*返回图片  */

.return {
  color: #000;
  font-size: 30rpx;
  float: left;
  padding-left: 40rpx;
}


/*发布消息按钮  */

.publication {
  color: #000;
  font-size: 30rpx;
  float: right;
  background: #858fab;
  padding-right: 40rpx;
}

/*发布内容盒子部分  */

.heading {
  margin-top: 10rpx;
  margin-bottom: 5rpx;
}

/*题目  */

.title1 {
  font-size: 30rpx;
  color: #302F2F;
  padding-left: 40rpx;
  display: block;
  padding-top: 20rpx;
  padding-bottom: 15rpx;
}

.textcolor{
  color: #e1e1e1;
  font-size: 30rpx;
}

.line1 {
  border-top: 2rpx solid #e1e1e1;
  width: 100%;
  height: 1rpx;
  display: block;
  margin-top: 12rpx;
}

/*底部盒子  */

.bottom {
  position: fixed;
  bottom: 10px;
  
}

/*底部分割线  */

.bottomline {
  border-top: 2rpx solid #e1e1e1;
  width: 750rpx;
  height: 1rpx;
  display: block;
}

.question-images-area {
  padding: 40rpx 0;
}

.question-images-tool {
  display: flex;
  align-items: center;
}

.question-images {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}

.q-image-wrap {
  width: 31%;
  margin-right: 10rpx;
  margin-left: 10rpx;
}

.q-image {
  flex: 1;
  height: 200rpx;
  width: 100%;
}

.q-image-remover {
  text-align: center;
}

.btn {
  margin-left: 30rpx;
  
}






