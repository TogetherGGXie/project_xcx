/**index.wxss**/
@import "/pages/template/indexPopup.wxss";

/*隔壁有坑头部部分  */

.header {
  width: 100%;
  display: table;
  border-bottom: 2rpx solid #e1e1e1;
  padding: 18rpx 24rpx;
  position: relative;
}

/*头部图片部分  */

.header > image {
  width: 90rpx;
  height: 90rpx;
  overflow: hidden;
  float: right;
  margin-right: 10rpx;
  border-radius: 50rpx;
}

/*隔壁有坑文字属性  */

.header > text {
  color: #0a0901;
  font-size: 60rpx;
  font-weight: 900;
  padding-left: 24rpx;
}

.projectbox {
  padding: 0rpx 50rpx;
  position: relative;
}

.headingtext {
  font-size: 40rpx;
  color: #000;
  margin-top: 50rpx;
  display: block;
  letter-spacing: 2rpx;
  font-weight: 900;
}

.project {
  width: 100%;
  height: 180rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  /* box-shadow: 0px 2px 5px #dfdede; */
  position: relative;
  border-bottom: 2rpx dashed #efeff1;

}

.headimage {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-left: 0rpx;
  margin-top: 15rpx;
  /* border:1rpx solid #ffd92e; */
}

.projecttext {
  position: absolute;
  top: 15rpx;
  left: 180rpx;
  z-index: 0;
}

.biaoti {
  font-size: 30rpx;
  color: #000;
  display: block;
}

.leaderName {
  font-size: 25rpx;
  color: #3e3939;
  display: block;
  margin-right: 110rpx;
  padding-top: -5rpx;
  line-height: 16px;
}

.start {
  font-size: 25rpx;
  color: #3e3939;
  display: block;
  margin-top: 15rpx;
  position: absolute;
  top: 75rpx;
  left: 0rpx;
  width:350rpx;
  z-index: 1;
}

.end {
  font-size: 25rpx;
  color: #3e3939;
  display: block;
  margin-top: 15rpx;
  position: absolute;
  top: 110rpx;
  left: 0rpx;
  width:350rpx;
  z-index: 1;
}
.line1 {
  border-top: 2rpx solid #e1e1e1;
  width: 100%;
  height: 1rpx;
  display: block;
  margin-top: 12rpx;
}
