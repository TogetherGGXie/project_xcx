<!--导航栏  -->
<view class='navigation'>
  <!--返回按钮  -->
  <navigator open-type="navigateBack" class="return">返回</navigator>
  <!--  -->
  <!--发布按钮  -->
  <text class='publication'>发布</text>
</view>

<view class='heading'>

  <picker class='title1' mode="date" start="" bindchange="setTime">
    选择日期 {{time}}
  </picker>
  <image class='line1'></image>
  <picker bindchange="pickProject" mode="selector" value="pIndex" range="{{projectList}}" range-key="{{'projectName'}}"> 
      <view class="title1">选择项目 {{projectName}}</view> 
    </picker> 
  <image class='line1'></image>
  <!--生产情况记录  -->
  <textarea placeholder-class='textcolor' class='title1' placeholder='生产情况记录'></textarea>
  <image class='line1'></image>
<button type="default" size="mini" bindtap="chooseImage">添加图片</button>
</view>


<!--底部栏  -->
<view class='bottom'>

  <image class='bottomline'></image>
  <image class='photo' src='/images/photo.png' bindtap='chooseImage'></image>

</view>