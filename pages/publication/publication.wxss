/* pages/pagepublication/pagepublication.wxss */

/*导航 问题：居中问题 */

.navigation {
  text-align: center;
  border-bottom: 2rpx solid #e1e1e1;
  padding-bottom: 65rpx;
}

/*返回图片  */

.return {
  color: #000;
  font-size: 30rpx;
  float: left;
  padding-left: 40rpx;
}


/*发布消息按钮  */

.publication {
  color: #000;
  font-size: 30rpx;
  float: right;
  padding-right: 40rpx;
}

/*发布内容盒子部分  */

.heading {
  margin-top: 10rpx;
  margin-bottom: 5rpx;
}

/*题目  */

.title1 {
  font-size: 30rpx;
  color: #302F2F;
  padding-left: 40rpx;
  display: block;
  padding-top: 20rpx;
  padding-bottom: 15rpx;
}

.textcolor{
  color: #e1e1e1;
  font-size: 30rpx;
}

.line1 {
  border-top: 2rpx solid #e1e1e1;
  width: 100%;
  height: 1rpx;
  display: block;
  margin-top: 12rpx;
}

/*底部盒子  */

.bottom {
  position: fixed;
  bottom: 10px;
  
}

/*底部分割线  */

.bottomline {
  border-top: 2rpx solid #e1e1e1;
  width: 750rpx;
  height: 1rpx;
  display: block;
}

.question-images-area {
  padding: 40rpx 0;
}

.question-images-tool {
  display: flex;
  align-items: center;
}

.question-images {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}

.q-image-wrap {
  width: 31%;
  margin-right: 10rpx;
}

.q-image {
  flex: 1;
  height: 200rpx;
  width: 100%;
}

.q-image-remover {
  text-align: center;
}

.btn {
  padding-left: 40rpx;
  
}
